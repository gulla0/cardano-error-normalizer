{
  "name": "cardano-error-normalizer",
  "version": "0.1.0",
  "description": "Normalize heterogeneous Cardano stack errors into a stable CardanoAppError shape.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node --experimental-strip-types --test",
    "prepack": "npm run build",
    "prepublishOnly": "npm run typecheck && npm test"
  },
  "packageManager": "npm@10",
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
