{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "rewriteRelativeImportExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "examples/**/*.ts"]
}
